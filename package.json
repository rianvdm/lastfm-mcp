{
	"name": "lastfm-mcp",
	"version": "0.0.0",
	"private": true,
	"description": "Model Context Protocol server for Last.fm music data integration",
	"keywords": ["mcp", "lastfm", "music", "scrobbling", "listening-history", "cloudflare-workers"],
	"license": "MIT",
	"type": "module",
	"scripts": {
		"deploy": "wrangler deploy",
		"deploy:prod": "wrangler deploy --env production",
		"dev": "wrangler dev --port 8787",
		"start": "wrangler dev",
		"test": "vitest",
		"test:multi-user": "node scripts/test-multi-user.js",
		"cf-typegen": "wrangler types",
		"lint": "eslint src --ext .ts,.tsx",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"build": "wrangler deploy --dry-run --outdir dist",
		"setup:prod": "./scripts/setup-production.sh"
	},
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "^0.8.19",
		"@cloudflare/workers-types": "^4.20250607.0",
		"@typescript-eslint/eslint-plugin": "^8.33.1",
		"@typescript-eslint/parser": "^8.33.1",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^10.1.5",
		"prettier": "^3.5.3",
		"typescript": "^5.5.2",
		"vitest": "~3.0.7",
		"wrangler": "^4.19.1"
	},
	"dependencies": {
		"@types/crypto-js": "^4.2.2",
		"crypto-js": "^4.2.0",
		"oauth-1.0a": "^2.2.6"
	}
}
